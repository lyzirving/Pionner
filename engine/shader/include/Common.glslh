// SRGB to Linear Space
vec3 Mon2Lin(vec3 x)
{
    return vec3(pow(x[0], 2.2), pow(x[1], 2.2), pow(x[2], 2.2));
}

// Nearest int value
int NeInt(float val)
{
    float index = floor(val + 0.5f);
	return int(index);
}